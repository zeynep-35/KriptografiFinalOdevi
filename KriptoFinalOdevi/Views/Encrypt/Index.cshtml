@{
    ViewData["Title"] = "RSA Şifrele";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4 p-4">
                <h2 class="text-center mb-4 text-success">🔐 RSA Şifreleme</h2>
                <p class="text-center text-muted">RSA public key'inizi girin ve şifrelenecek metni aşağıya yazın.</p>

                <form method="post" asp-action="Index">
                    <!-- Base64 Public Key -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">Public Key (Base64 formatında):</label>
                        <textarea name="publicKeyBase64" class="form-control" rows="4" required placeholder="MIIBIjANBgkqhkiG9w0BAQEFAAOCAQ8AMIIBCgK..."></textarea>
                    </div>

                    <!-- Metin Girişi -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Şifrelenecek Metin:</label>
                        <textarea name="inputText" class="form-control" rows="3" required placeholder="Şifrelenecek metni girin..."></textarea>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success btn-lg shadow-sm">Şifrele</button>
                    </div>
                </form>

                @if (ViewBag.EncryptedText != null)
                {
                    <div class="mt-4">
                        <h5 class="text-primary d-flex justify-content-between">
                            Şifrelenmiş Metin:
                            <button class="btn btn-outline-primary btn-sm" onclick="copyToClipboard('encryptedResult')">📋 Kopyala</button>
                        </h5>
                        <pre class="key-box" id="encryptedResult">@ViewBag.EncryptedText</pre>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- CSS -->
<style>
    .key-box {
        background: #f8f9fa;
        border: 1px solid #ced4da;
        padding: 15px;
        border-radius: 10px;
        font-family: "Courier New", Courier, monospace;
        font-size: 0.85rem;
        overflow-x: auto;
        max-height: 300px;
        white-space: pre-wrap;
    }

    .card:hover {
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        transition: all 0.3s ease-in-out;
    }
</style>

<!-- JS -->
<script>
    function copyToClipboard(elementId) {
        var text = document.getElementById(elementId).innerText;
        navigator.clipboard.writeText(text).then(function () {
            alert("Şifreli metin kopyalandı!");
        }, function () {
            alert("Kopyalama başarısız.");
        });
    }
</script>
