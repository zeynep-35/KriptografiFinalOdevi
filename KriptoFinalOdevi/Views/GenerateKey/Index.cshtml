@{
    ViewData["Title"] = "RSA Anahtar Üret";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="card shadow-lg border-0 rounded-4 p-4">
                <h2 class="text-center mb-4 text-primary">🔑 RSA Anahtar Üretici</h2>
                <p class="text-center text-muted">Aşağıdaki butonla yeni bir Public / Private key çifti oluşturabilirsiniz.</p>

                <form method="post" asp-action="Index">
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg shadow-sm">Anahtar Oluştur</button>
                    </div>
                </form>

                @if (ViewBag.PublicKey != null && ViewBag.PrivateKey != null)
                {
                    <div class="mt-5">

                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h5 class="text-success mb-0">📤 Public Key:</h5>
                            <button class="btn btn-sm btn-outline-success" onclick="copyToClipboard('publicKey')">📋 Kopyala</button>
                        </div>
                        <pre class="key-box" id="publicKey">@ViewBag.PublicKey</pre>

                        <div class="d-flex justify-content-between align-items-center mt-4 mb-2">
                            <h5 class="text-danger mb-0">🔐 Private Key:</h5>
                            <button class="btn btn-sm btn-outline-danger" onclick="copyToClipboard('privateKey')">📋 Kopyala</button>
                        </div>
                        <pre class="key-box" id="privateKey">@ViewBag.PrivateKey</pre>

                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- CSS -->
<style>
    .key-box {
        background: #f1f3f5;
        border: 1px solid #ced4da;
        padding: 15px;
        border-radius: 10px;
        font-family: "Courier New", Courier, monospace;
        font-size: 0.85rem;
        overflow-x: auto;
        max-height: 300px;
        white-space: pre-wrap;
    }

    .card:hover {
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        transition: all 0.3s ease-in-out;
    }

    button:focus {
        outline: none;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }
</style>

<!-- JavaScript -->
<script>
    function copyToClipboard(elementId) {
        var text = document.getElementById(elementId).innerText;
        navigator.clipboard.writeText(text).then(function () {
            alert("Anahtar panoya kopyalandı!");
        }, function () {
            alert("Kopyalama başarısız oldu.");
        });
    }
</script>
