@{
    ViewData["Title"] = "RSA Anahtar Üret";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="glass-card p-5 animate__animated animate__fadeIn">
                <h2 class="text-center mb-4 text-neon">🔑 RSA Anahtar Üretici</h2>
                <p class="text-center text-light">Aşağıdaki butonla yeni bir Public / Private key çifti oluşturabilirsiniz.</p>

                <form method="post" asp-action="Index">
                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-outline-neon btn-lg shadow">Anahtar Oluştur</button>
                    </div>
                </form>

                @if (ViewBag.PublicKey != null && ViewBag.PrivateKey != null)
                {
                    <div class="mt-5">

                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h5 class="text-success mb-0">📤 Public Key:</h5>
                            <button class="btn btn-sm btn-outline-success" onclick="copyToClipboard('publicKey')">📋 Kopyala</button>
                        </div>
                        <pre class="key-box" id="publicKey">@ViewBag.PublicKey</pre>

                        <div class="d-flex justify-content-between align-items-center mt-4 mb-2">
                            <h5 class="text-danger mb-0">🔐 Private Key:</h5>
                            <button class="btn btn-sm btn-outline-danger" onclick="copyToClipboard('privateKey')">📋 Kopyala</button>
                        </div>
                        <pre class="key-box" id="privateKey">@ViewBag.PrivateKey</pre>
                    </div>
                }

                <!-- Geri Dön Butonu -->
                <div class="mt-4 text-center">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-neon btn-sm px-4">
                        🔙 Geri Dön
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- Stil -->
<style>
    body {
        background-color: #0a0a0a;
        color: #fff;
        font-family: 'Poppins', sans-serif;
    }

    .glass-card {
        background: linear-gradient(145deg, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.02));
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 20px;
        box-shadow: 0 8px 40px rgba(255, 234, 0, 0.1);
        color: white;
    }

    .text-neon {
        color: #ffea00;
        text-shadow: 0 0 8px #ffea00, 0 0 15px #ffea00, 0 0 30px #ffea00;
        font-weight: 700;
    }

    .btn-outline-neon {
        border: 2px solid #ffea00;
        color: #ffea00;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
        padding: 10px 20px;
    }

        .btn-outline-neon:hover {
            background-color: #ffea00;
            color: #0a0a0a;
            box-shadow: 0 0 15px #ffea00;
        }

    .key-box {
        background: #111;
        color: #fff700;
        border: 1px solid #333;
        padding: 15px;
        border-radius: 12px;
        font-family: 'Courier New', Courier, monospace;
        font-size: 0.85rem;
        overflow-x: auto;
        max-height: 300px;
        white-space: pre-wrap;
        box-shadow: inset 0 0 10px rgba(255, 234, 0, 0.1);
    }

    button:focus {
        outline: none;
        box-shadow: 0 0 0 0.25rem rgba(255, 234, 0, 0.25);
    }
</style>

<!-- JS -->
<script>
    function copyToClipboard(elementId) {
        var text = document.getElementById(elementId).innerText;
        navigator.clipboard.writeText(text).then(function () {
            alert("Anahtar panoya kopyalandı!");
        }, function () {
            alert("Kopyalama başarısız oldu.");
        });
    }
</script>

<!-- Animate.css -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
