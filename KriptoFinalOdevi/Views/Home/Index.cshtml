@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container text-center text-white d-flex flex-column align-items-center justify-content-center py-5">
        <h1 class="display-3 fw-bold text-neon mb-3 animate__animated animate__fadeIn">🔒 GÜVENLİ VERİ ŞİFRELEME</h1>
        <p class="lead text-light mb-0 animate__animated animate__fadeIn animate__delay-1s">
            Verilerinizi RSA ve SHA256 ile modern bir arayüzde güvenle koruyun.
        </p>
    </div>
</div>

<!-- Features Section -->
<section id="features" class="container pt-4 pb-5">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4 justify-content-center">

        <!-- RSA Anahtar Üret -->
        <div class="col">
            <div class="cyber-card h-100 animate__animated animate__zoomIn">
                <div class="icon-circle bg-gradient-primary mb-3">🔑</div>
                <h5 class="text-white fw-bold">RSA Anahtar Üret</h5>
                <p class="text-muted">Güvenli bir public/private anahtar çifti oluşturun.</p>
                <a asp-controller="GenerateKey" asp-action="Index" class="btn btn-outline-neon w-100 mt-auto">Oluştur</a>
            </div>
        </div>

        <!-- RSA Şifrele -->
        <div class="col">
            <div class="cyber-card h-100 animate__animated animate__zoomIn animate__delay-1s">
                <div class="icon-circle bg-gradient-success mb-3">🔐</div>
                <h5 class="text-white fw-bold">RSA Şifrele</h5>
                <p class="text-muted">Verilerinizi RSA ile güvenli bir şekilde şifreleyin.</p>
                <a asp-controller="Encrypt" asp-action="Index" class="btn btn-outline-neon w-100 mt-auto">Şifrele</a>
            </div>
        </div>

        <!-- RSA Şifre Çöz -->
        <div class="col">
            <div class="cyber-card h-100 animate__animated animate__zoomIn animate__delay-2s">
                <div class="icon-circle bg-gradient-warning mb-3">🔓</div>
                <h5 class="text-white fw-bold">RSA Şifre Çöz</h5>
                <p class="text-muted">RSA ile şifrelenmiş verilerinizi kolayca çözün.</p>
                <a asp-controller="Decrypt" asp-action="Index" class="btn btn-outline-neon w-100 mt-auto">Çöz</a>
            </div>
        </div>

        <!-- SHA256 -->
        <div class="col">
            <div class="cyber-card h-100 animate__animated animate__zoomIn animate__delay-3s">
                <div class="icon-circle bg-gradient-dark mb-3">🧮</div>
                <h5 class="text-white fw-bold">SHA256 Özeti</h5>
                <p class="text-muted">Verilerinizin SHA256 özetini anında alın.</p>
                <a asp-controller="SHA256" asp-action="Index" class="btn btn-outline-neon w-100 mt-auto">Oluştur</a>
            </div>
        </div>
    </div>
</section>

<!-- Styles -->
<style>
    body {
        background: #0a0a0a;
        color: #ffffff;
        font-family: 'Poppins', sans-serif;
        overflow-x: hidden;
    }

    .hero-section {
        background: linear-gradient(135deg, #1e1e2f, #2a2a4a, #0a0a0a);
        border-bottom-left-radius: 30px;
        border-bottom-right-radius: 30px;
    }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle at 50% 20%, rgba(0, 255, 255, 0.15), transparent 70%);
            z-index: 0;
            opacity: 0.4;
        }

        .hero-section .container {
            position: relative;
            z-index: 1;
        }

    .text-neon-black {
        color: #1a1a1a;
        text-shadow: 0 0 5px #333, 0 0 10px #222, 0 0 20px #111;
        font-weight: 700;
    }


    .cyber-card {
        background: linear-gradient(145deg, rgba(255, 255, 255, 0.08), rgba(255, 255, 255, 0.03));
        backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 8px 40px rgba(0, 0, 0, 0.3);
        text-align: center;
        display: flex;
        flex-direction: column;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .cyber-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 50px rgba(0, 255, 255, 0.3);
        }

    .icon-circle {
        width: 70px;
        height: 70px;
        font-size: 35px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 10px;
        animation: pulse 2s ease-in-out infinite;
    }

        .icon-circle:hover {
            transform: scale(1.15);
        }

    .bg-gradient-primary {
        background: linear-gradient(45deg, #007bff, #00d4ff);
    }

    .bg-gradient-success {
        background: linear-gradient(45deg, #28a745, #00ff88);
    }

    .bg-gradient-warning {
        background: linear-gradient(45deg, #ffc107, #ffeb3b);
    }

    .bg-gradient-dark {
        background: linear-gradient(45deg, #343a40, #6c757d);
    }

    .btn-outline-neon {
        border: 2px solid #00f2ff;
        color: #00f2ff;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
        padding: 8px 15px;
    }

        .btn-outline-neon:hover {
            background: #00f2ff;
            color: #0a0a0a;
            box-shadow: 0 0 12px #00f2ff;
        }

    @@keyframes pulse {
        0% {
            box-shadow: 0 0 0 0 rgba(0, 242, 255, 0.6);
        }

        70% {
            box-shadow: 0 0 0 12px rgba(0, 242, 255, 0);
        }

        100% {
            box-shadow: 0 0 0 0 rgba(0, 242, 255, 0);
        }
    }


    @@media (max-width: 768px) {
        .hero-section .text-neon {
            font-size: 1.8rem;
        }

        .hero-section .lead {
            font-size: 1rem;
        }

        .cyber-card {
            padding: 15px;
        }

        .icon-circle {
            width: 50px;
            height: 50px;
            font-size: 25px;
        }
    }

</style>

<!-- Include Animate.css for animations -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />