@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Arka Plan -->
<div class="hero-bg">
    <div class="container py-5 text-center text-white">
        <h1 class="display-3 fw-bold text-gradient">🔐 Kriptografi Uygulamasına Hoş Geldiniz</h1>
        <p class="lead">RSA ve SHA256 işlemlerini modern bir arayüzle güvenle gerçekleştirin.</p>
    </div>
</div>

<!-- Kartlar Bölümü -->
<div class="container mt-5 mb-5">
    <div class="row justify-content-center g-4">

        <!-- RSA Anahtar Üret -->
        <div class="col-md-6 col-lg-3">
            <div class="glass-card">
                <div class="icon-circle bg-primary text-white mb-3">
                    🔑
                </div>
                <h5>RSA Anahtar Üret</h5>
                <p class="text-muted">Yeni bir public/private anahtar çifti oluşturun.</p>
                <a asp-controller="GenerateKey" asp-action="Index" class="btn btn-outline-primary w-100 mt-auto">Oluştur</a>
            </div>
        </div>

        <!-- RSA Şifrele -->
        <div class="col-md-6 col-lg-3">
            <div class="glass-card">
                <div class="icon-circle bg-success text-white mb-3">
                    🔐
                </div>
                <h5>RSA Şifrele</h5>
                <p class="text-muted">Metninizi RSA ile güvenli hale getirin.</p>
                <a asp-controller="Encrypt" asp-action="Index" class="btn btn-outline-success w-100 mt-auto">Şifrele</a>
            </div>
        </div>

        <!-- RSA Şifre Çöz -->
        <div class="col-md-6 col-lg-3">
            <div class="glass-card">
                <div class="icon-circle bg-warning text-white mb-3">
                    🔓
                </div>
                <h5>RSA Şifre Çöz</h5>
                <p class="text-muted">RSA ile şifrelenmiş veriyi çözün.</p>
                <a asp-controller="Decrypt" asp-action="Index" class="btn btn-outline-warning w-100 mt-auto">Çöz</a>
            </div>
        </div>

        <!-- SHA256 -->
        <div class="col-md-6 col-lg-3">
            <div class="glass-card">
                <div class="icon-circle bg-dark text-white mb-3">
                    🧮
                </div>
                <h5>SHA256 Özeti</h5>
                <p class="text-muted">Verinin SHA256 özetini hızlıca alın.</p>
                <a asp-controller="SHA256" asp-action="Index" class="btn btn-outline-dark w-100 mt-auto">Oluştur</a>
            </div>
        </div>

    </div>
</div>

<!-- Özel Stil -->
<style>
    .hero-bg {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        color: white;
        padding-top: 60px;
        padding-bottom: 60px;
        border-bottom-left-radius: 40px;
        border-bottom-right-radius: 40px;
    }

    .text-gradient {
        background: linear-gradient(to right, #00c6ff, #0072ff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.07);
        border-radius: 16px;
        padding: 30px 20px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(10px);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        text-align: center;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .glass-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 40px rgba(0, 0, 0, 0.2);
        }

    .icon-circle {
        width: 64px;
        height: 64px;
        font-size: 32px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        animation: floatIcon 3s ease-in-out infinite;
        margin-left: auto;
        margin-right: auto;
    }

    @@keyframes floatIcon {
        0%

    {
        transform: translateY(0px);
    }

    50% {
        transform: translateY(-6px);
    }

    100% {
        transform: translateY(0px);
    }

    }

    .btn {
        border-radius: 12px;
        font-weight: 500;
    }

    .card-title {
        font-weight: bold;
    }

    @@media (max-width: 576px) {
        .glass-card

    {
        padding: 20px 15px;
    }

    .icon-circle {
        width: 48px;
        height: 48px;
        font-size: 24px;
    }

    }
</style>
